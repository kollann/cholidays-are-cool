<div id="login">
    <div class ='logincontainer'>
        <h3><%>sign_in<%></h3>
        <form id="login-form">
            <input id="login-username" class="btn btn-secondary" required type="text" placeholder="<%>username<%>"/><br>
            <input id="login-password" class="btn btn-secondary" required type="password" placeholder="<%>password<%>"/><br>
            <button type="button" class="btn btn-secondary" id="login-submit" value="login"><%>login<%></button>
        </form>

    </div>
</div>